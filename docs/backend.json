
{
  "entities": {
    "userProfile": {
      "title": "User Profile",
      "description": "A user of the application, could be a customer, admin, or franchise owner.",
      "type": "object",
      "properties": {
        "uid": { "type": "string", "description": "The user's unique ID from Firebase Auth." },
        "email": { "type": "string", "format": "email", "description": "The user's email address." },
        "displayName": { "type": "string", "description": "The user's display name." },
        "photoURL": { "type": "string", "format": "uri", "description": "URL of the user's profile picture." },
        "role": {
          "type": "string",
          "description": "The role of the user.",
          "enum": ["customer", "outlet-admin", "franchise-owner"]
        },
        "outletId": {
            "type": "string",
            "description": "The ID of the outlet this user manages, if they are an outlet-admin."
        },
        "loyaltyPoints": { "type": "number", "description": "Accumulated loyalty points for the customer." },
        "birthday": { "type": "string", "format": "date", "description": "User's date of birth for rewards." }
      },
      "required": ["uid", "role"]
    },
    "city": {
        "title": "City",
        "description": "A city where Zapizza has outlets.",
        "type": "object",
        "properties": {
            "name": { "type": "string", "description": "The name of the city." },
            "latitude": { "type": "number" },
            "longitude": { "type": "number" }
        },
        "required": ["name"]
    },
    "outlet": {
        "title": "Outlet",
        "description": "A specific Zapizza outlet in a city.",
        "type": "object",
        "properties": {
            "name": { "type": "string", "description": "The name of the outlet." },
            "cityId": { "type": "string", "description": "The ID of the city this outlet belongs to." },
            "isOpen": { "type": "boolean", "description": "Whether the outlet is currently open and accepting orders." },
            "openingTime": { "type": "string", "format": "time", "description": "The opening time of the outlet." },
            "closingTime": { "type": "string", "format": "time", "description": "The closing time of the outlet." },
            "latitude": { "type": "number" },
            "longitude": { "type": "number" },
            "brand": { "type": "string", "enum": ["zapizza", "zfry"] },
            "address": { "type": "string" },
            "deliveryTime": { "type": "string" },
            "rating": { "type": "number" },
            "reviewCount": { "type": "number" }
        },
        "required": ["name", "cityId", "isOpen", "brand"]
    },
    "category": {
        "title": "Menu Category",
        "description": "A category for menu items, e.g., 'Veg Pizzas'.",
        "type": "object",
        "properties": {
            "name": { "type": "string", "description": "The name of the category." },
            "order": { "type": "number", "description": "The display order of the category."}
        },
        "required": ["name", "order"]
    },
    "menuItem": {
        "title": "Menu Item",
        "description": "A single item on the Zapizza menu.",
        "type": "object",
        "properties": {
            "name": { "type": "string" },
            "description": { "type": "string" },
            "price": { "type": "number", "description": "Price in Indian Rupees (INR)." },
            "isVeg": { "type": "boolean" },
            "categoryId": { "type": "string" },
            "imageId": { "type": "string" },
            "isAvailableGlobally": {"type": "boolean", "description": "If the item is available across all outlets (franchise controlled)."},
            "variations": {
              "type": "array",
              "items": {
                "type": "object",
                "properties": {
                  "name": { "type": "string" },
                  "price": { "type": "number" }
                }
              }
            },
            "addons": {
              "type": "array",
              "items": {
                "type": "object",
                "properties": {
                  "name": { "type": "string" },
                  "price": { "type": "number" }
                }
              }
            }
        },
        "required": ["name", "price", "isVeg", "categoryId", "isAvailableGlobally"]
    },
    "globalSettings": {
      "title": "Global Settings",
      "description": "Business rules controlled by the franchise owner.",
      "type": "object",
      "properties": {
        "gstPercentage": { "type": "number" },
        "deliveryFee": { "type": "number" },
        "minOrderForFreeDelivery": { "type": "number" },
        "loyaltyRatio": { "type": "number", "description": "Points earned per 100 INR spent." }
      },
      "required": ["gstPercentage", "deliveryFee", "minOrderForFreeDelivery"]
    },
    "coupon": {
      "title": "Coupon",
      "description": "Promotional codes for customers.",
      "type": "object",
      "properties": {
        "code": { "type": "string" },
        "discountType": { "type": "string", "enum": ["percentage", "fixed"] },
        "discountValue": { "type": "number" },
        "minOrderAmount": { "type": "number" },
        "active": { "type": "boolean" },
        "description": { "type": "string" }
      },
      "required": ["code", "discountType", "discountValue", "minOrderAmount", "active"]
    },
    "order": {
        "title": "Order",
        "description": "A customer order.",
        "type": "object",
        "properties": {
            "customerId": { "type": "string" },
            "customerName": { "type": "string" },
            "specialNote": { "type": "string", "description": "Instructions for the kitchen." },
            "items": { 
                "type": "array",
                "items": {
                    "type": "object",
                    "properties": {
                        "menuItemId": {"type": "string"},
                        "name": {"type": "string"},
                        "quantity": {"type": "number"},
                        "price": {"type": "number"}
                    },
                    "required": ["menuItemId", "name", "quantity", "price"]
                }
            },
            "subtotal": { "type": "number" },
            "gst": { "type": "number" },
            "deliveryFee": { "type": "number" },
            "discount": { "type": "number" },
            "total": { "type": "number", "description": "Final payable amount in INR." },
            "status": { "type": "string", "enum": ["New", "Preparing", "Out for Delivery", "Completed", "Cancelled"] },
            "createdAt": { "type": "string", "format": "date-time" },
            "outletId": { "type": "string" }
        },
        "required": ["customerId", "items", "total", "status", "createdAt", "outletId"]
    }
  },
  "auth": {
    "providers": ["phone", "password"]
  },
  "firestore": {
    "/users/{userId}": {
      "schema": { "$ref": "#/entities/userProfile" },
      "description": "Stores user profile information."
    },
    "/cities/{cityId}": {
      "schema": { "$ref": "#/entities/city" },
      "description": "List of cities where Zapizza operates."
    },
    "/outlets/{outletId}": {
        "schema": { "$ref": "#/entities/outlet" },
        "description": "List of all Zapizza outlets."
    },
    "/settings/global": {
      "schema": { "$ref": "#/entities/globalSettings" },
      "description": "Central business configuration."
    },
    "/coupons/{couponId}": {
      "schema": { "$ref": "#/entities/coupon" },
      "description": "Promotional codes list."
    },
    "/menuItems/{menuItemId}": {
        "schema": { "$ref": "#/entities/menuItem" },
        "description": "Global menu items."
    },
    "/orders/{orderId}": {
        "schema": { "$ref": "#/entities/order" },
        "description": "All customer orders."
    }
  }
}

rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    match /{document=**} {
      allow read, write: if false;
    }
    function isOwner(userId) {
      return request.auth.uid == userId;
    }
    match /users/{userId} {
      allow read: if isOwner(userId);
    }
    match /users/{userId} {
      allow write: if isOwner(userId);
    }
  }
}
